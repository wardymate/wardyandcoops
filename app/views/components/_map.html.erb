<div id="map">
</div>
<script>
  function initMap() {
    var site = { lat: 50.9189446, lng: -0.3030935 };

    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 12,
      center: site
    });
    var marker = new google.maps.Marker({
      position: site,
      map: map,
      icon: "http://maps.gstatic.com/mapfiles/ms2/micons/blue-pushpin.png",
      title: "Wedding Venue"
    });
    marker.setMap(map);
  }
</script>
<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBKeiS3d46eyhTuXUptWCwNPqLjUefZKac&callback=initMap">
